@using CMSIdea.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="container p-3 text-light">

    <div class="row pt-4">
        <div class="col-6">
            <h2>User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Create New User</a>
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>FullName</th>
                <th>UserName</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
              </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fullname</td>
                    <td>@item.UserName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>

                    <td style="width: 150px">
                        <div class="btn-group">
                            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </table>
    </div>

</div>
