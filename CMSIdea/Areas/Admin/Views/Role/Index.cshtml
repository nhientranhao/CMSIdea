
<div class="text-start p-4">
<h2>Role</h2>
</div>
<div class="row">
    @*-------User Role List--------------------*@

    <div class="mb-3 col-6  ">

            <div class="text-end ">

                <a asp-controller="Role" asp-action="Assign" class="btn btn-primary">
                    <i class="bi bi-plus"></i>Assign Role
                </a>
            </div>
        <hr />
        <div>
            <table class="table table-striped border">
                <tr class="table-info">
                    <th>
                        User Name
                    </th>

                    <th>Role Name</th>
                </tr>
                @foreach (var item in ViewBag.UserRoles)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.RoleName</td>

                    </tr>
                }
            </table>
        </div>
    </div>

    @*-------Roles--------------------*@

    <div class="mb-3 col-6 ">
        
       
        <div class="text-end ">
            
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>Create New Role
            </a>
        </div>

        <hr />

        <div>
            <table class="table table-striped border">
                <tr class="table-info">
                    <th>
                        Name
                    </th>

                    <th></th>
                </tr>
                @foreach (var item in ViewBag.Roles)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td style="width: 150px">
                            <div class="btn-group">
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @*<a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i></a>*@
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>



</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
