<div class="container p-3 text-light">
    <div class="row pt-4 ">
        <div class="col-9 ">
            <h4>Department list</h4>
        </div>
        <div class="col-3 text-end ">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>Create  New Department
            </a>
        </div>
    </div>
    <br />
    <br />
    <h4>Index Department </h4>
    <table class="table table-bordered table-striped">
        <thead>
        <th>Department Name</th>

        <th></th>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>

                    <td>
                        <div>
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil"></i></a>
                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
