@model IEnumerable<StatisticIdea>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Statistic Topic</h2>
        </div>
            </div>
    <br /><br />
    <table class="table table-bordered " id="tblData">
        <thead>
        <th>Topic/Name</th>
     <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                                        <td>
                        <div>
                            <a class="btn btn-primary"><i class="bi bi-hand-thumbs-up">@item.Like</i></a>
                            <a class="btn btn-danger"><i class="bi bi-hand-thumbs-down">@item.Dislike</i></a>
                            <a class="btn btn-warning"><i class="bi bi-eye"></i>@item.CountView</a>
                            <a class="btn btn-info"><i class="bi bi-pencil"></i>@item.CountComment</a>
                            <a class="btn btn-success"> <i class="bi bi-lightbulb"></i> @item.CountIdea </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
