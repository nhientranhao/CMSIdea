@model IEnumerable<IdeaReacts>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Statistic Idea </h2>
        </div>

    </div>
    <br /><br />
    <table class="table table-bordered " id="tblData">
        <thead>
        <th>Topic Name</th>
        <th>IdeaTitle</th>
        <th>Brief</th>
        <th>DateTime</th>
        <th>UserId</th>
        <th>Category</th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Topic.Name</td>
                    <td>@item.Title</td>
                    <td>@item.Brief</td>
                    <td>@item.DateTime</td>
                    <td>@item.UserId</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <div>
                            <div>
                                <a asp-controller="Idea" asp-action="Like" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-hand-thumbs-up"></i>@item.Like</a>
                                <a asp-controller="Idea" asp-action="Dislike" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-hand-thumbs-down">@item.Dislike</i></a>
                                <a asp-controller="Idea" asp-action="View" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-eye"></i>@item.CountView</a>
                                <a asp-controller="Idea" asp-action="Comment" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil">@item.CountComment</i></a>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@section Scripts{
    <script src="~/js/idea.js"></script>

